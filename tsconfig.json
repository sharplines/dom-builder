{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "removeComments": false
  },
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true
    }
  }
}
